<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%# ここからエラーメッセージ %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <div class="error"><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</div>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%# ここまでエラーメッセージ <%>

        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_Name">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name", id:"user_name" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" , class: "form-control-file user_image", id:"user_profile_image" %>
          </div>
          <div class="form-group">
            <label for="inputName">Introduction</label>
            <%= f.text_area :introduction , class: "form-control-file " %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
</div>



















