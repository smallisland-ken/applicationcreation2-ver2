<div class="container" px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<!--userの情報表示-->
<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<p>name：<%= @user.name %></p>
<p>introduction：<%= @user.introduction %></p>

<!--編集画面へのリンク-->
<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-dark btn-sm btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>

<!--本の情報投稿-->
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

</div>
<!--一覧表示-->
<div class="col-md-8 offset-md-1">
<h2>Users</h2>

<% @users.each do |user| %>
<table class="table table-striped">
  <p>image:<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p>name：<%= User.name %></p>
</table>
<% end %>

</div>
</div>