<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3"></div>
    <%= render 'users/user_template', user: @user %>
    <%= render 'users/book_template', book: @book %>
    </div>

<div clas="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
<thead>
<tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td><%= attachment_image_tag @user, :profile_image %></td>
<td><%= book.body %></td>
<td><%= book.title %></td>
</tr>

<% end %>
</tbody>
</table>

</div>
</div>