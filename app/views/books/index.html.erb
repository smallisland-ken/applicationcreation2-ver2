<div class="container px-5 px-sm-0">
<div class="row">
    <div class="col-md-3">
<%= render 'users/book_template', book:@book %>
</div>
<!--一覧表示-->
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
<thead>
<tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @books.each do |books| %>
<tr>
  <td><%= books.title %></td>
  <td><%= books.body %></td>

</tr>
<% end %>
</tbody>
</table>

</div>
</div>
</div>
</div>