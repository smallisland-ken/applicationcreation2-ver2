<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<%= form_with model:@editbook, local: true do |f| %>
　<h2>Editing Book</h2>
<!-- form_with部分 -->

  

  <div class="form-group">

  <%= f.text_field :title, autofocus: true %>
  </div>
  <div class="form-group"><h4>Opinion</h4></div>
  <div class="form-group"><%= f.text_area :body %></div>
  <div class="form-group"><%= f.submit '保存' %></div>
  <div class="form-group"><%= link_to "Show", book_path(@editbook) %> | <%= link_to "Back", books_path %></div>
<% end %>
</div>
</div>
</div>